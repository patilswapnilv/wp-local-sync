{
    "name": "wp-local-sync",
    "description": "WordPress Local Sync Plugin",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "phpseclib/phpseclib": "~3.0",
        "league/flysystem-sftp-v3": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "WPLocalSync\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPLocalSync\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
} 